doctype html
html
    head
        title title Look Inna Book - Users
        
        
    body
        include ./partial.pug
        div(id="contents")
            div
                div(id="changeUserArea")
                    h1 
                    div#dropMenu
                        //- p currentUser(UID): #{currUID}            
                        p Change user:
                        select(id='userSelect') Test
                            h1 test
                                each user in users
                                    option #{user.uid}
                        button(type="button" id="submit") Submit
                        br
                        br
                
                div(id="addUserArea")
                    h3 add new user:
                    |
                    h4 billing:
                    |
                    input(type="text" id="billing" placeholder="Santa's house 3")
                    |
                    h4 shipping:
                    |
                    input(type="text" id="shipping" placeholder="Not Santa's house 2")
                    |
                    button(type = "button" id="addUser") Create
                    |
            
            div(id="userTableArea")
                table(border='2')
                    tr
                        th uid 
                        th userbilling 
                        th usershipping
                        th account_type 
                        th cartid 
                        th storeid 
                    
                    each user in users
                        tr
                            td
                                p #{user.uid} 
                            td    
                                p #{user.userbilling}
                            td    
                                p #{user.usershipping}
                            td 
                                p #{user.account_type}
                            td  
                                p #{user.cartid}
                            td
                                p #{user.storeid}
        script(type="text/javascript" src="/eventHandle.js")
        //- script(type="text/javascript" src="./index.js")