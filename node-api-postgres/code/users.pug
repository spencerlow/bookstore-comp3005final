doctype html
html
    head
        title users
        
        
    body
        include ./partial.pug
        div
            h1 
            div#dropMenu
                p currentUser(UID): #{currUID}            
                p Change user:
                select(id='userSelect') Test
                    h1 test
                        each user in users
                            option #{user.uid}
                button(type="button" id="submit") Submit
                br
                br
                table(border='2')
                    tr
                        th uid 
                        th userbilling 
                        th usershipping
                        th account_type 
                        th cartid 
                        th storeid 
                    
                    each user in users
                        tr
                            td
                                p #{user.uid} 
                            td    
                                p #{user.userbilling}
                            td    
                                p #{user.usershipping}
                            td 
                                p #{user.account_type}
                            td  
                                p #{user.cartid}
                            td
                                p #{user.storeid}
        script(type="text/javascript" src="./users.js")
